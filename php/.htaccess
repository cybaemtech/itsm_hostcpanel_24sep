# PHP API .htaccess file for IT Helpdesk Portal
# Place this file in your public_html/itsm_app/php directory

# Enable the RewriteEngine
RewriteEngine On

# Set the base directory
RewriteBase /itsm_app/php/

# Enable CORS for API endpoints
<IfModule mod_headers.c>
    # Respond to OPTIONS preflight requests
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^(.*)$ $1 [R=200,L]
    
    # Set CORS headers for all requests
    Header always set Access-Control-Allow-Origin "https://cybaemtech.net/itsm_app"
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
    Header always set Access-Control-Allow-Credentials "true"
    Header always set Vary "Origin"
</IfModule>

# PHP settings
<IfModule mod_php7.c>
    # Configure session 
    php_value session.cookie_secure 1
    php_value session.cookie_httponly 1
    php_value session.use_only_cookies 1
    
    # Increase upload limits for file attachments
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value max_execution_time 300
    
    # Set error handling
    php_flag display_errors Off
    php_flag log_errors On
    php_value error_log /path/to/error.log
</IfModule>

# Protect sensitive files
<FilesMatch "^database\.php|config\.php$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Disable directory listing
Options -Indexes
